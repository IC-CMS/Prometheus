  },
    {
      "name": "aws2_builder",
      "type": "amazon-ebs",
      "ami_name": "dna-base-prom {{timestamp}}",
      "instance_type": "t2.micro",
      "region": "{{user `aws_region`}}",
      "source_ami": "{{user `aws_source_image`}}",
